@model Freelance.Core.Models.ApplicationUser

<div class="job_details_area" style="padding:0px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-2" style="background: white;"></div>
            <div class="col-lg-8" style="background: white;">
                <div style="text-align: center;">
                    <img src="@Url.Content(Model.PhotoPath)" style="border-radius: 20%; width: 110px; height: 110px">
                    <p>@Model.UserName</p>
                </div>
                <div style="margin-top: 2%;">
                    <ul>

                        <li>@Model.FirstName</li>
                        <li>@Model.LastName</li>
                        <li>@Model.Email</li>
                        <li>@Model.PhoneNumber</li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-2" style="background: white;"></div>
        </div>
        </div>
</div>