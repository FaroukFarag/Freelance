@using Microsoft.AspNet.Identity;

@model Freelance.Core.ViewModels.PostDetailsViewModel

<div class="job_details_area">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="job_details_header">
                    <div class="single_jobs white-bg d-flex justify-content-between">
                        <div class="jobs_left d-flex align-items-center">
                            <div class="thumb">
                                <img src="@Url.Content(Model.Client.PhotoPath)" style="width:229px; height: 100px" alt="">
                            </div>
                            <div class="jobs_conetent">
                                <a href="#"><h4>Software Engineer</h4></a>
                                <div class="links_locat d-flex align-items-center">
                                    <div class="location">
                                        <p> <i class="fa fa-clock-o"></i>@(Model.JobType == Freelance.Core.Enums.JobType.Fixed? "Fixed": "Hourly")</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @if (User.IsInRole("Freelancer"))
                        {
                            <div class="jobs_right">
                                <div class="apply_now">
                                    @*<a class="heart_mark" href="#"> <i class="fa fa-remove"></i> </a>*@
                                    <button data-freelancer-id="@User.Identity.GetUserId()" data-post-id="@Model.Id" class="boxed-btn3 js-toggle-applying">@(Model.Proposals.Contains(@User.Identity.GetUserId()) ? "Applied" : "Apply Now")</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="descript_wrap white-bg">
                    <div class="single_wrap">
                        <h4>Job description</h4>
                        <p>@Model.JobDescription</p>

                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="job_sumary">
                    <div class="summery_header">
                        <h3>Job Summery</h3>
                    </div>
                    <div class="job_content">
                        <ul>
                            <li>Client: <span>@Model.ClientName</span></li>
                            <li>Creation Date: <span>@Model.CreationDate</span></li>
                            <li>Job Budget: <span>@Model.JobBudget</span></li>
                            <li>Job Type: <span>@(Model.JobType == Freelance.Core.Enums.JobType.Fixed? "Fixed": "Hourly")</span></li>
                            <li>Submited Proposal: <span>@Model.Proposals.Count()</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            $(".js-toggle-applying").click(function (e) {
                var link = $(e.target);

                if (link.text() === "Apply Now") {
                    $.post("/api/proposal/apply", { freelancerId: link.attr("data-freelancer-id"), postId: link.attr("data-post-id") })
                        .done(function () {
                            console.log("POST");
                            link.text("Applied");
                        })
                        .fail(function () {
                            alert("Something failed!");
                        });
                }

                else {
                    $.ajax({
                        url: "/api/proposal",
                        method: "DELETE",
                        data: { freelancerId: link.attr("data-freelancer-id"), postId: link.attr("data-post-id") },
                    })
                        .done(function () {
                            console.log("DELETE");
                            link.text("Apply Now");
                        })
                        .fail(function () {
                            alert("Something failed!");
                        });
                }
            });
        });
    </script>
}