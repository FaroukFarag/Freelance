@model IEnumerable<Freelance.Core.Models.Post>

<div class="job_listing_area plus_padding">
    <div class="container">
        @if (User.Identity.IsAuthenticated)
        {
            <div class="row" style="text-align: right;margin-bottom: 2%;">
                <div class="col-lg-12">
                    <a class="boxed-btn3" href="@Url.Action("Create", "Post")">Post Job</a>
                </div>
            </div>
        }
        <div class="row">
            <div class="col-lg-3">
                <div class="job_filter white-bg">
                    <div class="form_inner white-bg">
                        <h3>Filter</h3>
                        <form action="#">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="single_field">
                                        <input type="text" placeholder="Job Title">
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="single_field">
                                        <input type="Date" placeholder="Choose Date">
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="single_field">
                                        <input type="text" placeholder="Client Name">
                                    </div>
                                </div>
                            </div>

                            <div class="reset_btn">
                                <button class="boxed-btn3 w-100" type="submit">Search</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-9">

                <div class="job_lists m-0">
                    <div class="row">
                        @foreach (var post in Model)
                        {
                            <div class="col-lg-12 col-md-12">
                                <div class="single_jobs white-bg d-flex justify-content-between">
                                    <div class="jobs_left d-flex align-items-center">
                                        <div class="thumb">
                                            <img src="~/Content/img/svg_icon/1.svg" alt="">
                                        </div>
                                        <div class="jobs_conetent">
                                            <a href="job_details.html">
                                                <h4>
                                                    @if (post.JobType == Freelance.Core.Enums.JobType.Fixed)
                                                    {
                                                        <span>Fixed</span>
                                                    }

                                                    else
                                                    {
                                                        <span>Hourly</span>
                                                    }
                                                </h4>
                                            </a>
                                            <div class="links_locat d-flex align-items-center">
                                                <div class="location">
                                                    <p>Job Budget</p>
                                                </div>
                                                <div class="location">
                                                    <p>@post.JobBudget</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    @if (User.IsInRole("Freelancer"))
                                    {
                                        <div class="jobs_right">
                                            <div class="apply_now">
                                                <a class="heart_mark" href="#"> <i class="fa fa-remove"></i> </a>
                                                <a href="@Url.Action("Apply", "Post", new { id = post.Id })" class="boxed-btn3">Apply Now</a>
                                            </div>
                                            <div class="date">
                                                <p>@post.CreationDate</p>
                                            </div>
                                        </div>
                                    }
                                    @if (User.IsInRole("Client"))
                                    {
                                        <div class="jobs_right">
                                            <div class="apply_now">
                                                <a href="job_details.html" class="genric-btn danger">Delete</a>
                                                <a href="job_details.html" class="genric-btn success">Edit</a>
                                            </div>
                                            <div class="date">
                                                <p>@post.CreationDate</p>
                                            </div>
                                        </div>
                                    }
                                </div>
                        </div>
                        }
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="pagination_wrap">
                                <ul>
                                    <li><a href="#"> <i class="ti-angle-left"></i> </a></li>
                                    <li><a href="#"><span>01</span></a></li>
                                    <li><a href="#"><span>02</span></a></li>
                                    <li><a href="#"> <i class="ti-angle-right"></i> </a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>