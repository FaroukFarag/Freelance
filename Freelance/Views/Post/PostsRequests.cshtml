@model IEnumerable<Freelance.Core.Models.Post>

<div class="job_listing_area plus_padding" style="margin-top: 5%">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">

                <div class="job_lists m-0">
                    <div class="row">
                        @foreach (var post in Model)
                        {
                            <div class="col-lg-12 col-md-12">
                                <div class="single_jobs white-bg d-flex justify-content-between">
                                    <div class="jobs_left d-flex align-items-center">
                                        <div class="thumb">
                                            <img src="@Url.Content(@post.Client.PhotoPath)" style="width: 229px; height: 100px" alt="">
                                        </div>
                                        <div class="jobs_conetent">
                                            <a href="job_details.html">
                                                <h4>
                                                    @if (post.JobType == Freelance.Core.Enums.JobType.Fixed)
                                                    {
                                                        <span>Fixed</span>
                                                    }

                                                    else
                                                    {
                                                        <span>Hourly</span>
                                                    }
                                                </h4>
                                            </a>
                                            <div class="links_locat d-flex align-items-center">
                                                <div class="location">
                                                    <p>Job Budget</p>
                                                </div>
                                                <div class="location">
                                                    <p>@post.JobBudget</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="jobs_right">
                                        <div class="apply_now">
                                            <button data-post-id="@post.Id" class="genric-btn danger js-reject">Reject</button>
                                            <button data-post-id="@post.Id" class="genric-btn success js-accept">Accept</button>
                                        </div>
                                        <div class="date">
                                            <p>@post.CreationDate</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="pagination_wrap">
                                <ul>
                                    <li><a href="#"> <i class="ti-angle-left"></i> </a></li>
                                    <li><a href="#"><span>01</span></a></li>
                                    <li><a href="#"><span>02</span></a></li>
                                    <li><a href="#"> <i class="ti-angle-right"></i> </a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            $(".js-accept").click(function (e) {
                var link = $(e.target);

                $.post("/api/post", { postId: link.attr("data-post-id") })
                    .done(function () {
                        link.parents('div.col-lg-12.col-md-12').remove();
                    })
                    .fail(function () {
                        alert("Something failed!");
                    });

            
            });

            $(".js-reject").click(function (e) {
                var link = $(e.target);

                $.ajax({
                    url: "/api/post/" + link.attr("data-post-id"),
                    method: "DELETE"
                })
                    .done(function () {
                        link.parents('div.col-lg-12.col-md-12').remove();
                    })
                    .fail(function () {
                        alert("Something failed!");
                    });
            });
        });
    </script>
}